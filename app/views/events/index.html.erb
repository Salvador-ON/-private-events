<div class="container">

<div>

<h1>Past Events</h1>

<table>
<tr>
    <th>Description</th>
    <th>Show</th>
</tr>
<%@events.past.each do |event|%>
<tr>

<td><%=event.description%></td>
<td><%= link_to "watch event", "/show_event?id=#{event.id}" %></td>

</tr>
<%end%>
</table>

</div>

<div>
<h1>Upcoming Events</h1>

<table>
<tr>
    <th>Description</th>
    <th>Show</th>
</tr>
<%@events.upcoming.each do |event|%>
<tr>

<td><%=event.description%></td>
<td><%= link_to "watch event", "/show_event?id=#{event.id}" %></td>

</tr>
<%end%>
</table>

</div>
</div>

