    <div class= "d-flex flex-row">
    <a href=<%="/show_event?id=#{event.id}"%> class="card-link btn btn-warning mx-1">Show</a>
    <% if Attendance.where(user_id: current_user.id, event_id: event.id)==[]%>
    <%= button_to('Attend', "/attendance?id=#{event.id}",  class: "btn btn-primary mx-1")%>
    <% end%>
    </div>
    
  </div>
</div>
<%end%>

<%(3-(@past.count % 3)).times do |event|%>

<div class="card m-1 tag-events border border-warning col-lg-3 col-md-5 col-sm-12 invisible">
  <div class="card-body">
    <h5 class="card-title"></h5>
    <h6 class="card-subtitle mb-2 text-muted"><span class="font-weight-bold">Date:</span></h6>
    <p class="card-text"><span class="font-weight-bold">Location:</span> </p>
    <a href= class="card-link btn btn-warning">Catch The Event</a>
  </div>
</div>
<%end%>

</div>
</div>

